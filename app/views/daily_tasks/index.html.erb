<p id="notice"><%= notice %></p>

<h1>Daily Tasks</h1>

<table>
  <thead>
    <tr>
      <th>Line user</th>
      <th>Task</th>
      <th>Is completed</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @daily_tasks.each do |daily_task| %>
      <tr>
        <td><%= daily_task.line_user %></td>
        <td><%= daily_task.task %></td>
        <td><%= daily_task.is_completed %></td>
        <td><%= link_to 'Show', daily_task %></td>
        <td><%= link_to 'Edit', edit_daily_task_path(daily_task) %></td>
        <td><%= link_to 'Destroy', daily_task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Daily Task', new_daily_task_path %>
